<div class="page-intro">
	<h1 class="title">Burger Eater</h1>
	<p class="page-desc">Come on in and eat as many burgers as you want! You can order anything here! Bon appetit!</p>
	<br />
	<img class="burger-img" src="assets/img/burger.png"/>
</div>
<div class="page-middle">
	<div class="burgers-container">
		<ul>
			{{#each burgers}}
				{{#unless devoured}}
					{{> burgers/burger-block devoured=false}}
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="devoured-container">
		<ul>
			{{#each burgers}}
				{{#if devoured}}
				<li>
					<p class="devoured-name">{{id}}. {{burger_name}}</p>
					<hr/>
				</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>
<div class="submit-form">
	<form class="create-a-burger">
		<input class="new-burger--text" name="newBurger" id="newBurger" placeholder="Enter a new burger here!" />
		<br />
		<button type="submit" name="submitBtn" id="submitBtn" class="submit-btn">Submit</button>
	</form>
</div>
